    <%= form_with model: @product do |form| %>
    <% @product.errors.full_messages.each do |error| %>
        <div class="alert">
        <%= error %>
        </div>
    <% end %>

    <div class="cntForm" >
        <%= form.label :title %>
        <%= form.text_field :title, class:'field'  %>
    </div>

    <div class="cntForm">
        <%= form.label :description %>
        <%= form.text_area :description, class:'dcpForm' %>
    </div>

    <div class="cntForm">
        <%= form.label :price %>
        <%= form.number_field :price, class:'field' %>
    </div>

    <div class="cntForm">
        <%= form.label :photo %>
        <%= form.file_field :photo %>
    </div>

    <div class="cntForm">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all.order(name: :asc), :id, :name %>
    </div>

    <div>
        <%= form.submit class:'btnGn btnCreate'%>
    </div>
        
    <% end %>
