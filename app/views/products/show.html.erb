<div class="cntProd two">
    <h2 class='title'><%= @product.title %></h2>
    <%= image_tag @product.photo, class:"imgProd" if @product.photo.attached? %>
    <p class='description'><%= @product.description %></p>  
    <p class='price'><%= @product.price %>$</p>
    
</div>

<div class="cntEdit">
    <div>
        <%= link_to t('.edit'), edit_product_path(@product), class:"btnGn btnEdit" %>
    </div>
    <div>
        <%= link_to t('.delete'), product_path(@product), data: {
        turbo_method: :delete,
        turbo_confirm: t('common.confirm')
        }, class:"btnGn btnDelete" %>
    </div>
</div>